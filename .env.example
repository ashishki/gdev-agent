# App
APP_NAME=gdev-agent
APP_ENV=dev
LOG_LEVEL=INFO

# LLM
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-6
KB_BASE_URL=https://kb.example.com
ANTHROPIC_INPUT_COST_PER_1K=0.003
ANTHROPIC_OUTPUT_COST_PER_1K=0.015

# Agent behavior
MAX_INPUT_LENGTH=2000
AUTO_APPROVE_THRESHOLD=0.85
APPROVAL_CATEGORIES=billing,account_access
APPROVAL_TTL_SECONDS=3600

# Core infra
REDIS_URL=redis://redis:6379

# Output guard
OUTPUT_GUARD_ENABLED=true
URL_ALLOWLIST=kb.example.com
OUTPUT_URL_BEHAVIOR=strip

# Webhook security and rate limiting
WEBHOOK_SECRET=
APPROVE_SECRET=
RATE_LIMIT_RPM=10
RATE_LIMIT_BURST=3

# Integrations
LINEAR_API_KEY=
LINEAR_TEAM_ID=
TELEGRAM_BOT_TOKEN=
TELEGRAM_APPROVAL_CHAT_ID=
GOOGLE_SHEETS_CREDENTIALS_JSON=
GOOGLE_SHEETS_ID=

# Optional local SQLite event log path (empty disables SQLite logging)
SQLITE_LOG_PATH=
